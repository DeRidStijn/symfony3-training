<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block nav %}
                <div id="navbar">
                    <a href= {{path('hobby_page', {'hobby':'music'})}} >Music</a>
                    <a href= {{path('hobby_page', {'hobby': 'whisky'})}} >Whisky</a>
                    <a href= {{path('hobby_page', {'hobby': 'cooking'})}} >Cooking</a>
                </div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href= "{{path('logout')}}" > logout</a>
            {% endif %}
        {% endblock %}
        {% block body %}

        {% endblock %}
        
        {% block javascripts %}
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        {% endblock %}
        {% block stylesheet %} <link rel="stylesheet" type="text/css" href="/css/mijnstijl.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        {% endblock %}
    </body>
</html>
